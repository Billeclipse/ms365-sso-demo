<Page
    x:Class="UwpClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="20">
        <Button x:Name="SignInButton" Content="Sign In" Click="SignInButton_Click" Margin="0,0,0,10" />
        <Button x:Name="CallApiButton" Content="Call API" Click="CallApiButton_Click" IsEnabled="False" />
        <TextBlock x:Name="ResultText" TextWrapping="Wrap" Margin="0,10,0,0" />
    </StackPanel>
</Page>